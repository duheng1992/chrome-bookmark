{
  "manifest_version": 3,
  "name": "chrome-bookmark",
  "version": "0.1.0",
  "description": "谷歌书签-威力加强版 v0.1.0",
  "icons": {
    "16": "images/logo-16.png",
    "32": "images/logo-32.png",
    "48": "images/logo-48.png",
    "128": "images/logo-128.png"
  },
  "background": {
    "service_worker": "src/background.js",
    "persistent": false
  },
  "action": {
    "default_title": "chrome-bookmark",
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/logo-16.png",
      "32": "images/logo-32.png",
      "48": "images/logo-48.png",
      "128": "images/logo-128.png"
    }
  },
  "permissions": [
    "scripting",
    "storage",
    "bookmarks",
    "tabs",
    "activeTab"
  ]
}
